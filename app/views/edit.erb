<h1>Edit Your Recipe:</h1>
<form method="POST" action="/recipes/<%= @recipe.id %>">
<input type="hidden" id="hidden" name="_method" value="PATCH">
<label>Name: <input type="text" name="name"><%= @recipe.name %></label><br><br>
<label>Ingredients: <input type="text" name="ingredients"><%= @recipe.ingredients %></label><br><br>
<label>Cook Time: <input type="text" name="cook_time"><%= @recipe.cook_time %></label><br><br>
<input type="submit" value="Update">
</form>